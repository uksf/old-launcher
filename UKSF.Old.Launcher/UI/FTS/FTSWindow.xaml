<general:SafeWindow x:Class="UKSF.Old.Launcher.UI.FTS.FtsWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:general="clr-namespace:UKSF.Old.Launcher.UI.General"
                    xmlns:fts="clr-namespace:UKSF.Old.Launcher.UI.FTS"
                    mc:Ignorable="d"
                    WindowStyle="None"
                    WindowStartupLocation="CenterScreen"
                    ResizeMode="NoResize"
                    AllowsTransparency="True"
                    Height="350"
                    Width="500"
                    Background="{DynamicResource Uksf.Background}"
                    BorderBrush="{DynamicResource Uksf.BackgroundLight}"
                    BorderThickness="1">
    <Grid>
        <fts:FtsTitleBarControl x:Name="FtsTitleBarControl" Margin="0,0,0,314" />
        <fts:FtsMainControl x:Name="FtsMainControl" Margin="0,36,0,0" />
    </Grid>
</general:SafeWindow>